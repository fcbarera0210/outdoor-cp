// Prisma schema - Cherry Experience
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// --- Rutas ---
model Ruta {
  id         String   @id @default(cuid())
  slug       String   @unique
  nombreEs   String
  nombreEn   String   @default("")
  zonaEs     String
  zonaEn     String   @default("")
  descripcionEs String
  descripcionEn String @default("")
  duracionEs     String @default("")
  duracionEn     String @default("")
  duracionDias   Int    @default(0)
  duracionNoches Int    @default(0)
  dificultad     String
  imagen     String
  destacada  Boolean  @default(false)
  orden      Int      @default(0)
  itinerarios RutaItinerario[]
  equipos    RutaEquipo[]
  proximasSalidas RutaProximaSalida[]
  reservas   Reserva[]
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
}

model RutaItinerario {
  id       String @id @default(cuid())
  rutaId   String
  ruta     Ruta   @relation(fields: [rutaId], references: [id], onDelete: Cascade)
  textoEs  String
  textoEn  String @default("")
  orden    Int    @default(0)
}

model RutaEquipo {
  id       String @id @default(cuid())
  rutaId   String
  ruta     Ruta   @relation(fields: [rutaId], references: [id], onDelete: Cascade)
  tituloEs String @default("")
  tituloEn String @default("")
  textoEs  String
  textoEn  String @default("")
  icono    String @default("")
  orden    Int    @default(0)
}

model RutaProximaSalida {
  id     String @id @default(cuid())
  rutaId String
  ruta   Ruta   @relation(fields: [rutaId], references: [id], onDelete: Cascade)
  fecha  String
  cupos  Int    @default(0)
  orden  Int    @default(0)
}

// --- Blog ---
model BlogPost {
  id         String   @id @default(cuid())
  slug       String   @unique
  titleEs    String
  titleEn    String   @default("")
  excerptEs  String
  excerptEn  String   @default("")
  contentEs  String
  contentEn  String   @default("")
  image      String
  date       String
  authorEs   String
  authorEn   String   @default("")
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
}

// --- Settings (key-value: contacto, site) ---
model Setting {
  id    String @id @default(cuid())
  key   String @unique
  value String // JSON string
}

// --- Equipo: instrucciones (single row) + miembros ---
model EquipoInstrucciones {
  id                String   @id @default("singleton")
  seguridadEs       String
  seguridadEn       String   @default("")
  queLlevarEs       String
  queLlevarEn       String   @default("")
  comportamientoEs  String
  comportamientoEn  String   @default("")
  dificultadFacilEs String
  dificultadFacilEn String   @default("")
  dificultadMediaEs String
  dificultadMediaEn String   @default("")
  dificultadAltaEs  String
  dificultadAltaEn  String   @default("")
  // Instrucciones básicas dinámicas: array de { tituloEs, tituloEn, textoEs, textoEn, icono }
  instruccionesBasicasJson String @default("[]")
  // Equipo necesario + señalética as JSON arrays of { tituloEs, tituloEn, textoEs, textoEn, icono? }
  equipoNecesarioJson String @default("[]")
  senaleticaJson      String @default("[]")
  updatedAt          DateTime @updatedAt
}

model MiembroEquipo {
  id      String   @id @default(cuid())
  nombre  String
  rolEs   String
  rolEn   String   @default("")
  imagen  String   @default("")
  bioEs   String   @default("")
  bioEn   String   @default("")
  orden   Int      @default(0)
}

// --- Home content (one row per block type or single row with JSON) ---
// Using a single HomeBlock model with type + JSON for flexibility
model HomeBlock {
  id    String   @id @default(cuid())
  type  String   @unique // hero, partners, featuredSection, gallery, salidas, reserva
  value String   // JSON
  updatedAt DateTime @updatedAt
}

// --- Reservas ---
model Reserva {
  id        String   @id @default(cuid())
  rutaId    String?
  ruta      Ruta?    @relation(fields: [rutaId], references: [id])
  salidaId  String?
  nombre    String
  email     String
  telefono  String   @default("")
  pais      String   @default("")
  notas     String   @default("")
  estado    String   @default("pendiente")
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

// --- NextAuth.js models ---
model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?
  user              User    @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String?   @unique
  emailVerified DateTime?
  image         String?
  passwordHash  String?
  role          String    @default("admin")
  accounts      Account[]
  sessions      Session[]
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}
